<div class="row center-xs">
  <div class="col-xs-8 col-md-6">
    <div class="box text-left">
      <h2>Crear nueva cuenta</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :nombre, "Nombre del Usuario" %><br />
          <%= f.text_field :nombre, class:"form-control" %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
        </div>

        <div class="field">
          <%= f.label :password, "ContraseÃ±a" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> caracteres minimo)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "Confirmar contraseÃ±a" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
        </div>

        <div class="field">
          <% tipos={'Personal de Obra'=>'Obra','Bodeguero'=>'Bodeguero'} %>
          <%= f.label :tipo, "Tipo de Usuario" %><br />
          <%= f.select :tipo, tipos %>
        </div>

        <div class="actions">
          <%= f.submit "Crear cuenta", class:"btn be-color white"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
