<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

<div style="width:80%;margin:0 auto;">
  <div class="w3-container">
    <h1>Solicitudes de materiales</h1>
    <table class="w3-table w3-striped w3-bordered">
      <tr>
        <th>Titulo</th>
        <th>Estado</th>
        <th>Fecha Requerida</th>
        <th></th>
      </tr>

      <% @solicitudes.each do |solicitudes| %>
        <tr>
          <td><%= solicitudes.titulo %></td>
          <td><%= solicitudes.estado %></td>
          <td><%= solicitudes.f_requerida %></td>
          <td><%= link_to 'Ver', solicitude_path(solicitudes), class: "btn" %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
